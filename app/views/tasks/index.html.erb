<table>
  <thead>
    <tr>
      <th>category_id</th>
      <th>task_name</th>
      <th>task_body</th>
    </tr>
  </thead>

  <tbody>
  
    <%@tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.task_name %></td>
      <td><%= task.task_body %></td>
      <td><%= task.category_id %></td>
      <td><%= task.deadline %></td>
      <td><%= task.status %></td>
    </tr>
    
    <%end%>
  </tbody>
</table>

<%= link_to 'Add task', new_category_task_path(@category.id) %>