<%= render "shared/navbar"%>

<div class = "task_container">
<table class="table">
  <thead>
    <tr>
      <!--<th>task_id</th>-->
      <th>TASK NAME</th>
      <th>TASK DESCRIPTION</th>
      <!--<th>category_id</th>-->
      <th>DEADLINE</th>
      <th>STATUS</th>
      <th>CREATED AT</th>
      <!--<th>USER_ID</th>-->

    </tr>
  </thead>

  <tbody>
  
    <% @tasks.each do |task| %>
    <tr>
      <!--<td><%= task.id %></td>-->
      <td><%= task.task_name %></td>
      <td><%= task.task_body %></td>
      <!--<td><%= task.category_id %></td>-->
      <td><%= task.deadline %></td>
      <td><%= task.status %></td>
      <td><%= task.created_at %></td>
      <!--<td><%= task.user_id %></td>-->
      

      <td><button type="button" class="btn btn-secondary"><%= link_to "Edit", edit_category_task_path(task.category_id, task.id) %></button></td> 
      <td><button type="button" class="btn btn-danger"><%= link_to "Show", category_task_path(task.category_id, task.id) %></button></td> 
      <td><button type="button" class="btn btn-secondary"><%= link_to "Delete", category_task_path(task.category_id, task.id),method: :delete, data: { confirm: "Are you sure?" } %></button></td> 
    </tr>

    
    <%end%>

  </tbody>
</table>


<button type="button" class="btn btn-outline-light"><%= link_to 'Add task', new_category_task_path(@category_id) %></button>
<button type="button" class="btn btn-outline-light"><%= link_to 'Back', category_path(@category_id) %></button>



</div>